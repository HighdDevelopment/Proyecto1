	  }
		{(
		 t=<ASSIGNTO >":" x=num() "," t=<WORD> {variables.put(t.toString(),x); System.out.println(variables);} 
   	   | t=< MOVE > ":" x = num() {world.moveForward(x,false);salida = "Command: Moveforward ";}  
