	void vars(): 
		{
	Token name;
		  }
		{
		< VARS > ( LOOKAHEAD(2) name = < WORD > "," {variables.put(name.toString(),null); })*(name = < WORD >  {variables.put(name.toString(),null); })";"
		}

	void Procesos(): {
	  Token name,para,para2;}
	 {
		  
		  name = < WORD > "["
		  "|"( LOOKAHEAD(2)  para=< WORD >  "," )* (para2=< WORD > )? "|"
			(			  bloques()
